{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "lib": ["es5", "es6", "dom"],
    "rootDir": ".",
    "declaration": true,
    "moduleResolution": "node",
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "types.d.ts"
  ],
  "exclude": ["node_modules", "**/*.test.ts"],
  "files": ["types.d.ts"]
}